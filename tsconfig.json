{
    "compilerOptions": {
        "lib": ["dom", "es2015"],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}